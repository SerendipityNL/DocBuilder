defcolor = #333
myfont = "Helvetica Neue", Helvetica, Arial, sans-serif
accent = #00AF40

*
	margin: 			0
	padding: 			0

body
	font: 				13px myfont
	color: 				defcolor

a
	text-decoration: 	underline

a:link, a:visited
	color: 				defcolor

a:hover, a:active
	color: 				accent

h1
	font: 				bold 20px myfont
	margin: 			0 0 10px 0

p
	margin: 			0 0 10px 0

table
	border-collapse:	collapse
	margin: 			0 0 10px 0

th, td
	margin: 			0
	text-align:			left
	padding:			2px 20px 2px 0

h1#header
	background-color: 	#404040
	color: 				#FFF
	padding: 			8px 20px
	border-bottom: 		5px solid accent
	margin: 			0

div#content
	margin: 			10px 20px


div#chat input[type="text"]
	border:		 		none
	background-color: 	none

div#chat input[type="submit"] 
	border:				1px solid #CCC
	border-top: 		none
	background-color: 	#CCC
	padding: 			8px 10px

div#chat div#messages-wrapper 
	border: 			1px solid #CCC
	background-color: 	#FFF
	height: 			300px
	overflow: 			auto


div#chat div#messages div
	padding:			5px
	display:			none

div#chat div#messages div.active-chat-view
	display:			block

div#chat div#messages p 
	margin:				0 0 4px
	color: 				#004A7F


div#chat div#message
	width:				528px
	border:				1px solid #CCC
	background-color: 	#FFF
	border-top: 		none
	padding: 			8px

div#message-tabs
	height:				50px
	border-bottom:		1px solid #CCC

div#message-tabs ul
	display:			inline-block;
	
div#message-tabs ul li
	height:				30px
	margin:				8px 0px 8px 5px
	padding:			0 5px
	border:				1px solid #CCC
	line-height:		30px
	display:			inline-block;

div#message-tabs ul li.active-chat-tab
	font-weight:		bold
	
div#message-tabs ul li.new-messages a
	font-weight:		bold
	color:				#D00

div#chat div#message input 
	outline:			none
	width: 				100%


div#chat input#msg_send 
	width: 				100px
	float: 				right

span.channel
	color:				#F0F
	font-weight:		bold

.strong
	font-weight: 		bold
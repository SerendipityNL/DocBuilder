extend layout
block content
	h1= pageTitle
	table
		thead
			tr
				th Aantal
				th Prijs
		tbody
			tr
				td: input(type="integer", ng-model="quantity", required)
				td: input(type="number", ng-model="cost", required)
			tr
				td(style="text-align:right") Totaal:
				td {{ quantity * cost | currency:'&euro; ' }}
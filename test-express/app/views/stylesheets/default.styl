defcolor = #333
myfont = "Helvetica Neue", Helvetica, Arial, sans-serif
accent = #00AF40

*
	margin: 			0
	padding: 			0

body
	font: 				13px myfont
	color: 				defcolor

a
	text-decoration: 	underline;

a:link, a:visited
	color: 				defcolor

a:hover, a:active
	color: 				accent

h1
	font: 				bold 20px myfont
	margin: 			0 0 10px 0;

p
	margin: 			0 0 10px 0;

table
	border-collapse:	collapse
	margin: 			0 0 10px 0

th, td
	margin: 			0
	text-align:			left
	padding:			2px 20px 2px 0

h1#header
	background-color: 	#404040
	color: 				#FFF
	padding: 			8px 20px
	border-bottom: 		5px solid accent
	margin: 			0

div#content
	margin: 			10px 20px
